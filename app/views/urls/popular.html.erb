<h2>Top 100 most frequently accessed URLs</h2>
<div class="urls">
  <table class="table">
    <thead class="thead-dark">
      <tr>
	<th scope="col">Title</th>
	<th scope="col">URL</th>
	<th scope="col">Accesses</th>
      </tr>
    </thead>
    <tbody>
      <% @urls.each do |url| %>
	<tr>
	  <td><%= url.title %></td>
	  <td><%= shortened_url(url) %></td>
	  <td><%= url.accesses%></td>
	</tr>
      <% end %>
    </tbody>
  </table>
</div>

<%= link_to "Back", root_path %>
